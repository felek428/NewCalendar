<UserControl x:Class="NewCalendar.NowyCalendarDayButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewCalendar"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"  MouseDown="UserControl_MouseDown_1"  
             >
    <UserControl.Template>
        <ControlTemplate>
            <Button Background="Aquamarine" Content="{Binding Path=Content, RelativeSource={x:Static RelativeSource.TemplatedParent}}"/>
        </ControlTemplate>
    </UserControl.Template>



</UserControl>
